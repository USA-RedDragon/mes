(define-macro (let-syntax bindings . rest)
  `((lambda ()
      ,@(map (lambda (binding)
               `(define-macro (,(car binding) . args)
                  (,(cadr binding) (cons ',(car binding) args)
                   (lambda (x0) x0)
                   eq?)))
             bindings)
      ,@rest)))
