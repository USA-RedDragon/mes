(when guile?
  (use-modules (ice-9 match))
  )

(pass-if "first dummy" #t)
(pass-if-not "second dummy" #f)

(pass-if "match symbol"
  (seq?
   (match 'bla
     ('bla 'bla))
   'bla))

(pass-if "match no symbol"
  (sequal?
   (match 'foo
     ('bla 'bla)
     (_ "no match: foo"))
   "no match: foo"))

(pass-if "match symbol?"
  (seq?
   (match 'foo
     ((? symbol?) 'symbol)
     (_ "no match: symbol")
     )
   'symbol))

(pass-if "match list"
  (sequal?
   (match '(0)
     ((0) '(0))
     (_ "no match: (0)"))
   '(0)))

(pass-if "match list 2"
  (sequal?
   (match (list 1 2 3) (`(1 ,b ,c) (list b c)))
   '(2 3)))

(pass-if "match list 3"
  (seq?
   (match '(0 1 2)
     ((0 x y) (+ x y))
     (_ "no match: 0 1 2"))
   3))

(pass-if "match ellipsis"
  (sequal?
   (match '(1 2)
     ((t ...) t)
     (_ "no match: (1 2)"))
   '(1 2)))

(result 'report)

