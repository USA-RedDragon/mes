(define (i386:push-accu)
  '(#x50))                              ; push %eax

(define (i386:pop-base)
  '(#x5a))                              ; pop %edx

(define (i386:push-base)
  '(#x52))                              ; push %edx

(define (i386:ret)
  '(#xc9                                ; leave
    #xc3))                              ; ret

(define (i386:accu->base)
  '(#x89 #xc2))                         ; mov    %eax,%edx

