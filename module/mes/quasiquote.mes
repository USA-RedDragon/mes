;;; Commentary:

;;; quasiquote.mes is loaded after base.  It provides quasiquote
;;; written in Scheme.

;;; Code:

(mes-use-module (mes base))

(define-macro (quasiquote x)
  (define (loop x)
    (if (not (pair? x)) (cons 'quote (cons x '()))
        (if (eq? (car x) 'quasiquote) (loop (loop (cadr x)))
            (if (eq? (car x) 'unquote) (cadr x)
                (if (and (pair? (car x)) (eq? (caar x) 'unquote-splicing))
                    ((lambda (d)
                       (list 'append (cadar x) d))
                     (loop (cdr x)))
                    ((lambda (a d)
                       (if (pair? d)
                           (if (eq? (car d) 'quote)
                               (if (and (pair? a) (eq? (car a) 'quote))
                                   (list 'quote (cons (cadr a) (cadr d)))
                                   (if (null? (cadr d))
                                       (list 'list a)
                                       (list 'cons* a d)))
                               (if (memq (car d) '(list cons*))
                                   (cons (car d) (cons a (cdr d)))
                                   (list 'cons* a d)))
                           (list 'cons* a d)))
                     (loop (car x))
                     (loop (cdr x))))))))
  (loop x))
