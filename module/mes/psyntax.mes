(define (env:define a+ a)
  (set-cdr! a+ (cdr a))
  (set-cdr! a a+)
  (set-cdr! (assq (quote *closure*) a) a+)
  (car a+))

(define-macro (define ARGS . BODY)
  (cons* (quote env:define)
         (cons* (quote cons)
                (cons* (quote sexp:define)
                       (list (quote quote)
                             (cons (quote DEFINE) (cons ARGS BODY)))
                       (quote ((current-module))))
                (quote ((list))))
         (quote ((current-module)))))

